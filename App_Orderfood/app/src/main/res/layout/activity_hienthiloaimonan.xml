<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hienthiloaimonan"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#0B6159">
    <LinearLayout
        android:background="#09302C"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:id="@+id/imbLoaithucanBack"/>
        <ImageButton

            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/imbThemloaimonan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_playlist_add"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:id="@+id/gvHienthiloaimonan"/>
    </LinearLayout>
</LinearLayout>