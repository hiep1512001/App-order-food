<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#0B6159">
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/imvAnhmonan"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/anh_nen_load"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/txtTenmonan"
            android:drawableLeft="@drawable/ic_baseline_bookmark"
            android:textSize="26sp"
            android:text="Ten mon an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtGiamonan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_attach_money"
            android:text="Gia tien"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>